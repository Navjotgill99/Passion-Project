@model Passion_Project.Models.CommentDto
@{
    ViewBag.Title = "DeleteConfirm";
}
<h2>Delete Comment</h2>

<div class="main-container">
    <nav>
        <a class="navlink" href="/Recipe/Show/@Model.RecipeId">Cancel</a>
    </nav>
    <P>Are you sure you want to delete this comment?</P>
    <div>
        <p><strong>[UserName: @Model.UserName]: </strong> @Model.CommentText <i>(@Model.CommentTime.ToString("g"))</i></p>
    </div>

    <p>This action cannot be undone.</p>
    <form method="POST" action="/Comment/Delete/@Model.CommentId" >
        <button type="submit">Delete</button>
    </form>
</div>

